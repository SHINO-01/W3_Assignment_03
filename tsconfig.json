      "target": "ES2020",
      "module": "commonjs",
      "rootDir": "./source",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["source/**/*.ts"],
    "exclude": ["node_modules", "dist"]
