{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "rootDir": "./source",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["node_modules/@types", "source/@types"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["source/**/*.ts", "__tests__"],
  "exclude": ["node_modules", "dist"]
}
